{
  "name": "teamchess",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx server/index.ts",
    "build:client": "vite build client",
    "build:server": "tsc -p tsconfig.json && cp server/load_engine.cjs dist/",
    "build": "npm run build:client && npm run build:server",
    "lint": "eslint .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p client/tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "chess.js": "^1.4.0",
    "express": "^5.1.0",
    "nanoid": "5.1.5",
    "react": "^19.1.0",
    "react-chessboard": "^5.2.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stockfish": "^16.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.1.4",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,cjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": "prettier --write"
  }
}
