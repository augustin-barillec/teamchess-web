{
  "private": true,
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev:server\" \"wait-on tcp:3001 && npm run dev:client\"",
    "dev:server": "npm --workspace=server run dev",
    "dev:client": "npm --workspace=client run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^2.8.0",
    "wait-on": "^8.0.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
