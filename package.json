{
  "private": true,
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev:server\" \"wait-on tcp:3001 && npm run dev:client\"",
    "dev:server": "npm run build --workspace=shared && npm --workspace=server run dev",
    "dev:client": "npm --workspace=client run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "wait-on": "^8.0.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
